<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quicky" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E604971B</item>
        <item name="colorPrimaryVariant">@color/custom_color_primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/custom_color_text_primary</item>
        <item name="colorSecondaryVariant">#54E6C4</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/custom_color_status</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom style for call to action buttons   -->
    <style name="MaterialButton_active" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|normal</item>
        <item name="cornerRadius">24dp</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="strokeColor">@color/custom_color_primary_light</item>
        <item name="backgroundTint">@color/custom_color_nav_header</item>
        <item name="android:textColor">@color/custom_color_text_primary</item>
    </style>

    <!-- Custom style for not so important buttons   -->
    <style name="MaterialButton_inactive" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|normal</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="cornerRadius">24dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#74FFFFFF</item>
        <item name="backgroundTint">@color/custom_color_inactive_button_background</item>
        <item name="android:textColor">@color/custom_color_text_primary</item>
    </style>

    <!-- Custom style for edit text views   -->
    <style name="Edit_Text_Views" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/custom_color_text_primary</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Custom style for title text views   -->
    <style name="Text_Views_Titles" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textStyle">bold|normal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Custom style for normal text views   -->
    <style name="Text_Views_Normal" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Custom style for outlined text input layout views   -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="minWidth">260dp</item>
        <item name="strokeColor">@color/custom_color_primary_light</item>
        <item name="strokeWidth">1dp</item>
        <item name="borderWidth">1dp</item>
    </style>

    <!-- Custom style for tab layout texts   -->
    <style name="Tab_Text_Appearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#037109</item>
        <item name="android:textStyle">bold|normal</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- Custom style for tab layout  -->
    <style name="Tab_Layout_Style" parent="Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabTextAppearance">@style/Tab_Text_Appearance</item>
        <item name="tabSelectedTextColor">@color/custom_color_text_primary</item>
    </style>


    <style name="Theme.Quicky.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Quicky.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Quicky.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>